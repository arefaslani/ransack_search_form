<%= content_tag :div, {
  class: 'fields condition ransack-condition-field', 'data-object-name' => f.object_name
  } do %>

  <%= content_tag(:span, button_to_remove_fields, {}, false) %>

  <%= f.attribute_fields do |a| %>
    <%= render 'ransack_advanced_search/attribute_fields', f: a %>
  <% end %>

  <%= f.predicate_select({}, {class: 'form-control input-sm'}) %>

  <%= f.value_fields do |v| %>
    <%= render 'ransack_advanced_search/value_fields', f: v %>
  <% end %>

  <%= button_to_add_fields '', f, :value, 'ransack-add-attribute' %>

<% end %>
