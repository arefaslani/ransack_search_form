<%= content_tag :div, { class: 'fields',
  'data-object-name' => f.object_name } do %>


  <%= content_tag(:span, "#{translate('ransack.advanced_search.condition_group.match')}
    #{f.combinator_select} #{translate('ransack.advanced_search.condition_group.match_condition')}
    #{button_to_remove_fields}", nil, false) %>

  <%= f.condition_fields do |c| %>
    <%= render 'ransack_advanced_search/condition_fields', f: c %>
  <% end %>

  <%= button_to_add_fields translate('ransack.advanced_search.attribute_field.add'),
      f, :condition %>

  <%= f.grouping_fields do |g| %>
    <%= render 'ransack_advanced_search/grouping_fields', f: g %>
  <% end %>

<% end %>
